<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/project_name"
        style="@style/ProjectName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/language"
        style="@style/Language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/project_name"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/star_img"
        app:layout_constraintWidth_percent=".1"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fork_img"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/star_icon"/>

    <TextView
        android:id="@+id/stargazersCount"
        style="@style/Counts"
        app:layout_constraintBottom_toBottomOf="@id/star_img"
        app:layout_constraintEnd_toEndOf="@id/star_img"/>

    <ImageView
        android:id="@+id/fork_img"
        app:layout_constraintWidth_percent=".1"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/fork_icon"/>

    <TextView
        android:id="@+id/forksCount"
        style="@style/Counts"
        app:layout_constraintBottom_toBottomOf="@id/fork_img"
        app:layout_constraintEnd_toEndOf="@id/fork_img"/>


</androidx.constraintlayout.widget.ConstraintLayout>